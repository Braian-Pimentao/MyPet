<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyPet" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/principal_app</item>
        <item name="colorAccent">@color/principal_app</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="estiloCampoDeTexto" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">@color/black</item>
        <item name="colorAccent">@color/principal_app</item>
        <item name="colorControlNormal">@color/principal_app</item>
        <item name="colorControlActivated">@color/principal_app</item>
    </style>

    <style name="colorDeTexto">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="colorDeCardView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="colorLinea" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="estiloMenuElegir" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="coloresIconos" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="logoInicio" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="srcCompat">@drawable/logo</item>
    </style>

    <style name="LogoBuzon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="srcCompat">@drawable/ic_buzon_negro</item>
    </style>

    <style name="LogoFavorito" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="srcCompat">@drawable/ic_no_favorito_negro</item>
    </style>

    <style name="LogoGatoTriste" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="srcCompat">@drawable/ic_gato_triste_negro</item>
    </style>

    <style name="LogoCasaChat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="srcCompat">@drawable/ic_casa_chat_negro</item>
    </style>

    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_mypet</item>
    </style>

    <style name="myBottomNavigationStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@drawable/bottom_navigation_colors_claro</item>
        <item name="itemTextColor">@drawable/bottom_navigation_colors_claro</item>
    </style>


</resources>