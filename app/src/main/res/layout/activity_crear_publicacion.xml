<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.publicar.ActivityCrearPublicacion">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/principal_app"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cancelar_publicacion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/pulsar_publicar"
                android:contentDescription="@string/boton_publicar"
                android:onClick="cancelarPublicacion"
                android:scaleType="center"
                android:src="@drawable/ic_cancelar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="45dp"
                android:text="@string/nueva_mascota"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="624dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/principal_app"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/imagen_publicar_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:onClick="elegirImagen"

                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_camara" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/imagen_publicar_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:onClick="elegirImagen"
                                android:padding="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_camara" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/imagen_publicar_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:onClick="elegirImagen"
                                android:padding="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_camara" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/imagen_publicar_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:onClick="elegirImagen"
                                android:padding="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_camara" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/imagen_publicar_5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:onClick="elegirImagen"
                                android:padding="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_camara" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/estiloCampoDeTexto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/campo_nombre_animal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nombre_animal"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/estiloCampoDeTexto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/campo_edad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edad_animal"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/boton_cambiar_tipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/boton_tipo_animal"
                    android:drawableEnd="@drawable/ic_flecha"
                    android:onClick="cambiarTipoAnimal"
                    android:padding="5dp"
                    android:text="@string/tipo_animal"
                    android:textAlignment="textStart"
                    android:textColor="@color/gris" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/estiloCampoDeTexto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/campo_raza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/raza_animal"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/estiloCampoDeTexto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/campo_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/descripcion"
                        android:inputType="textMultiLine"
                        android:maxLength="500" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/sexo"
                    android:textAlignment="center"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/sexo_masculino"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/desc_masculino"
                        android:onClick="seleccionarSexo"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_masculino"
                            android:layout_width="match_parent"

                            android:layout_height="70dp">

                            <ImageView
                                android:id="@+id/masculino"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/desc_masculino"
                                android:padding="10dp"
                                android:src="@drawable/ic_masculino" />

                        </androidx.cardview.widget.CardView>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/masculino"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sexo_femenino"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@color/opaco"
                        android:contentDescription="@string/desc_femenino"
                        android:onClick="seleccionarSexo"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_femenino"
                            android:layout_width="match_parent"
                            android:layout_height="70dp">

                            <ImageView
                                android:id="@+id/femenino"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/opaco"
                                android:contentDescription="@string/desc_femenino"
                                android:padding="10dp"
                                android:src="@drawable/ic_femenine" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/femenino"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/boton_registro"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:background="@drawable/pulsar_boton_app"
            android:onClick="subirPublicacion"
            android:text="@string/publicar_anuncio"
            android:textColor="@color/white" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>