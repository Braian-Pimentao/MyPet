<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyPet" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/principal_app</item>
        <item name="colorPrimaryDark">@color/principal_app</item>
        <item name="colorAccent">@color/principal_app</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="estiloCampoDeTexto">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/principal_app</item>
        <item name="colorControlNormal">@color/principal_app</item>
        <item name="colorControlActivated">@color/principal_app</item>
    </style>

    <style name="colorDeTexto">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="colorDeCardView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="fondoSnackBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/gris</item>
    </style>

    <style name="colorTextoBotonesSnackBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="colorLinea" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="estiloMenuElegir" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/gris</item>
    </style>

    <style name="logoInicio" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/logo_blanco</item>
    </style>

    <style name="LogoCasaChat" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/ic_casa_chat_blanco</item>
    </style>

    <style name="LogoGatoTriste" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/ic_gato_triste_blanco</item>
    </style>


    <style name="coloresIconos" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="LogoBuzon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="srcCompat">@drawable/ic_buzon_blanco</item>
    </style>

    <style name="LogoFavorito" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="srcCompat">@drawable/ic_no_favorito_blanco</item>
    </style>

    <style name="splashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_mypet</item>
    </style>

    <style name="myBottomNavigationStyle">
        <item name="backgroundTint">@color/grisOscuro</item>
        <item name="itemIconTint">@drawable/bottom_navigation_colors_oscuro</item>
        <item name="itemTextColor">@drawable/bottom_navigation_colors_oscuro</item>
    </style>
</resources>